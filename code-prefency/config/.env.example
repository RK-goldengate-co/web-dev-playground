# Environment Variables for User Management System
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME="User Management System"
APP_VERSION="1.0.0"
APP_ENV="development"
APP_DEBUG=true
APP_URL="http://localhost:8000"

# Server Configuration
SERVER_HOST="localhost"
SERVER_PORT=8000
SERVER_TIMEOUT=30

# Database Configuration
DB_CONNECTION="postgresql"
DB_HOST="localhost"
DB_PORT=5432
DB_DATABASE="user_management"
DB_USERNAME="postgres"
DB_PASSWORD="your_secure_password_here"

# PostgreSQL specific settings
DB_CHARSET="utf8"
DB_PREFIX=""
DB_SSLMODE="disable"

# Authentication
JWT_SECRET="your_super_secret_jwt_key_here_make_it_long_and_random"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Session Configuration
SESSION_SECRET="another_super_secret_key_for_sessions"
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE="lax"

# Email Configuration (Gmail SMTP example)
MAIL_MAILER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME="your-email@gmail.com"
MAIL_PASSWORD="your-app-password-here"
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="User Management System"

# Cache Configuration (Redis)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
CACHE_TTL=3600

# Queue Configuration (for background jobs)
QUEUE_CONNECTION="sync"
QUEUE_FAILED_DRIVER="database"

# Broadcasting (real-time features)
BROADCAST_DRIVER="pusher"
PUSHER_APP_ID="your_pusher_app_id"
PUSHER_APP_KEY="your_pusher_app_key"
PUSHER_APP_SECRET="your_pusher_app_secret"
PUSHER_HOST="api.pusherapp.com"
PUSHER_PORT=443
PUSHER_SCHEME="https"
PUSHER_APP_CLUSTER="mt1"

# File Storage
FILESYSTEM_DRIVER="local"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION="us-east-1"
AWS_BUCKET=""
AWS_URL=""

# Payment Gateway (Stripe example)
STRIPE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Social Authentication
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
FACEBOOK_CLIENT_ID="your_facebook_app_id"
FACEBOOK_CLIENT_SECRET="your_facebook_app_secret"
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Monitoring and Analytics
SENTRY_DSN=""
GOOGLE_ANALYTICS_ID=""

# API Keys for Third-party Services
OPENAI_API_KEY=""
SLACK_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""

# Custom Application Settings
DEFAULT_USER_ROLE="user"
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_MINUTES=15

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

# Performance Settings
CACHE_ENABLED=true
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true

# Development Settings
VITE_APP_NAME="User Management System"
VITE_APP_URL="http://localhost:8000"

# Docker Configuration
DOCKER_APP_PORT=8000
DOCKER_DB_PORT=5432
DOCKER_REDIS_PORT=6379

# Kubernetes Configuration
K8S_NAMESPACE="user-management"
K8S_REPLICAS=3

# CI/CD Configuration
CI=true
DEPLOYMENT_ENV="staging"

# Logging Configuration
LOG_CHANNEL="stack"
LOG_LEVEL="debug"
LOG_DAILY_FILES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK="local"
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION=30

# Security Headers
SECURITY_HEADERS=true
CSP_ENABLED=false
HSTS_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# API Configuration
API_VERSION="v1"
API_RATE_LIMIT=1000
API_CACHE_TTL=300

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Custom Variables
CUSTOM_VAR_1=""
CUSTOM_VAR_2=""
CUSTOM_VAR_3=""

# Database Backup Settings
DB_BACKUP_ENABLED=true
DB_BACKUP_PATH="/backups"
DB_BACKUP_FREQUENCY="@daily"
DB_BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
SSL_CERT_PATH=""
SSL_KEY_PATH=""
SSL_CA_PATH=""

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=false

# Internationalization
LOCALE="en"
FALLBACK_LOCALE="en"
AVAILABLE_LOCALES="en,vi,fr,de,es,ja,ko"

# Asset Compilation
VITE_DEV_SERVER=true
MIX_ENV="development"

# Custom API Keys
API_KEY_1=""
API_KEY_2=""
API_KEY_3=""

# External Service URLs
EXTERNAL_API_1=""
EXTERNAL_API_2=""
EXTERNAL_API_3=""

# Database Migration Settings
MIGRATION_AUTO_RUN=false
SEED_AUTO_RUN=false

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_DISCORD_ENABLED=false

# Feature Toggles
FEATURE_FLAG_1=false
FEATURE_FLAG_2=false
FEATURE_FLAG_3=false

# Custom Configuration
CUSTOM_CONFIG_1=""
CUSTOM_CONFIG_2=""
CUSTOM_CONFIG_3=""

