{
  "manifest_version": 3,
  "name": "Clipboard History Extension",
  "version": "1.2",
  "description": "Lưu lịch sử các văn bản đã copy với giao diện web.",
  "permissions": [
    "clipboardRead",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mở lịch sử copy"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
