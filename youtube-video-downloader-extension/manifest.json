{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.0.0",
  "description": "Extension để tải video từ YouTube một cách dễ dàng",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://api.y2mate.com/*",
    "https://api.savefrom.net/*",
    "https://cobalt.tools/*",
    "https://www.y2mate.nu/*",
    "https://9convert.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Video Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "popup.css", "settings.html", "settings.js", "settings.css"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
